\node at (-5,1) {
\begin{lstlisting}
  model SubCircuit
    parameter Real R1, R2, L, C;
    Real i, u;
    protected
    Real u1,i1, u2,i2, uC,iC, uL,iL;    
    equation
    u1 = R1 * i1;    u2 = R2 * i2;
    u2 = uL;         uL=L*der(iL);
    iC=C*der(uC);    u=u1+uL;
    uC=u1+u2;        i=i1+iC;
    i1=i2+iL;
  end SubCircuit;
\end{lstlisting}
};
\node(matrix) {
